{
  "name": "ujumbe-sms-client",
  "version": "1.0.0-beta",
  "description": "A TypeScript client library for UjumbeSMS API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsdown",
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint . --ext .ts",
    "type:check": "tsc --noEmit",
    "format:check": "prettier --check . --write",
    "prepare": "npm run build",
    "build:watch": "tsdown -w",
    "prepublishOnly": "npm run build",
    "publish": "npm publish --access public --tag next"
  },
  "keywords": [
    "sms",
    "api",
    "ujumbe",
    "messaging"
  ],
  "author": "<MikeTeddyOmondi <me@mt0.dev>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "jest": "^29.6.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsdown": "^0.13.3",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MikeTeddyOmondi/ujumbe-sms-client"
  }
}
